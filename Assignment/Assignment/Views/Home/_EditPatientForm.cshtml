@using DataAccess.Customemodel;
@model Patientform;

<div class="modal fade" id="PatientFormModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#00B7FF">
                <h5 class="modal-title text-light" id="exampleModalLabel">Patient Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="UpdatePatientSubmit" asp-controller="Home">
                    <input asp-for="patientid" hidden/>
                    <div class="mb-3 d-flex gap-2">
                        <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                            <input asp-for="Fname" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput" class="email">First Name</label>
                        </div>
                        <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                            <input asp-for="Lname" type="text" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword" class="email">Last Name</label>
                        </div>
                    </div>

                    <div class="mb-3 d-flex gap-2">
                        <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                            <input asp-for="email" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput" class="email">Email</label>
                        </div>
                        <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                            <input asp-for="Age" type="text" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword" class="email">Age</label>
                        </div>
                    </div>

                    <div class="mb-3 d-flex gap-2">
                        <div class="form-check form-check-inline">
                            <label class="form-check-label" for="inlineCheckbox1">Gender</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                            <label class="form-check-label" for="inlineCheckbox2">Female</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                            <label class="form-check-label" for="inlineCheckbox3">Others</label>
                        </div>

                    </div>

                    <div class="mb-3 d-flex gap-2">
                        <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                            <input asp-for="phonenumber" type="text" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword" class="email">Phonenumber</label>
                        </div>
                        <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                            <input asp-for="Disease" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput" class="email">Disease</label>
                        </div>

                    </div>
                    <div class="mb-3 d-flex gap-2">
                        <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                            <input asp-for="Specialist" type="text" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword" class="email">Specialist</label>
                        </div>
                    </div>

                    <div class="mb-3 d-flex gap-2 model-foot">
                        <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                            <button data-bs-dismiss="modal" type="reset" class="form-control" id="floatingInput" placeholder="name@example.com">
                                <label for="floatingInput" class="email">Cancel</label>
                        </div>
                        <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                            <button type="submit" class="form-control bg-primary" id="floatingPassword" placeholder="save">
                                <label class="text-white mb-2">Save</label>
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>