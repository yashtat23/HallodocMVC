@model DataAccess.CustomModel.LoginVm;

@{
    ViewData["Title"] = "patientreg";
}
<link rel="stylesheet" href="~/css/patientreg.css" />
<link rel="stylesheet" href="~/css/dark-mode.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<div class="conatiner d-flex flex-column justify-content-center align-items-center">

    <div style="height:100vh;width:320px;" class="d-flex align-content-center justify-content-between flex-column">
        <div class="d-flex justify-content-around">
            <div>
                <img class="hallodoc-img" src="~/img/hallodoc.png" alt="aaavvv">
            </div>

            <div>
                <button type="button" class="light btn shadow border-info ms-2"
                        style="border-radius: 10px; border-color: aqua" id="colorButton">
                    <i id="moon" class="bi bi-moon text-info fs-5"></i>
                    <i id="sun" class="bi bi-sun text-info fs-5 d-none"></i>
                </button>
                @* <img onclick="toggleDarkMode()" class="light" src="../img/dark.png" alt=""> *@
            </div>
        </div>

        <div class="mt-5 d-flex flex-column">
            <a asp-controller="Home" asp-action="Index" class="d-flex text-decoration-none align-items-center border border-0">
                <div class="d-flex">
                    <img class="back" src="../img/back.png" alt="">
                </div>
                <span style="color: #00b8e6;" class="back-txt">Back</span>
            </a>



            <h3 class="text-center mt-2">
                Login To Your Account
            </h3>
            <form method="post">
                <div class="input-div form-floating mt-2">
                    <input type="email" asp-for="Email" class="form-control shadow-none" placeholder="Email">
                    <label class="FloatingInput" for="Name"> Email</label>
                    <i class="i2 bi bi-person-circle icon"></i>
                    <span class="text-danger" asp-validation-for="Email"></span> 
                </div>

                <div class="input-div form-floating mt-3">
                    <input type="password" asp-for="Password" class="form-control shadow-none" id="myInput" placeholder="Password">
                    <label class="FloatingInput" for="Name">Password</label>
                    <i class="i1 bi bi-eye icon" onclick="myPassword()" id="icon_1"></i>
                     <i class="icon bi bi-eye-slash-fill" onclick="password()" id="icon_2"></i>
                     <span class="text-danger" asp-validation-for="Password"></span> 
                </div>

                <div class="mt-3">
                    <div class="login">
                        <a>
                            <button class="btn w-100 border-0 fw-medium"
                                    style="background-color: #00b8e6; color: white;" type="submit">
                                Log in
                            </button>
                        </a>
                    </div>
                    @* <div class="d-flex justify-content-center mt-2">
                        <a asp-controller="patient" asp-action="patientcreateacc" class="mt-2 text-decoration-none"
                           style="color: #00b8e6;">Don't have account? Create Account</a>
                    </div> *@
                    <div class="d-flex justify-content-center mt-2">
                        <a asp-controller="patient" asp-action="patientfpassword" class="mt-2 text-decoration-none"
                           style="color: #00b8e6;">Forgot Password?</a>
                    </div>

                </div>

            </form>

        </div>

        <div class="d-flex footer mt-5 ms-4 fw-medium">Terms of Conditions &nbsp;|&nbsp; Privacy Policy</div>
    </div>
</div>


<script src="~/js/site.js"></script>
<script src="~/js/dark-mode.js"></script>
<script>
    function myPassword() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

