@{
    ViewData["Title"] = "businessInforeq";
}
@model DataAccess.CustomModels.BusinessReqModel; 

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<link rel="stylesheet" href="~/css/patientreq.css" />

<!-- modal -->
@await Html.PartialAsync("modal")
@await Html.PartialAsync("navbar")

<div class="container-fluid">

    <div class="navbar navbar-light justify-content-end">
        <a>
            <button class="back btn btn-outline-info m-2" onclick="location.href='@Url.Action("patientsubreq", "Patient")'">
                <span class="h6 p-0 m-0 text-center" style="color: #10bce9;">&#60; Back</span>
            </button>
        </a>
    </div>
</div>

<div class="container">
    <form method="post">
        <h4>Business Information</h4>

        <div class="row mt-3">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input asp-for="firstName" type="text"  class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Your First Name</label>
                <span class="text-danger" asp-validation-for="firstName"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input asp-for="lastName" type="text"  class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Your Last Name</label>
                <span class="text-danger" asp-validation-for="lastName"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input asp-for="phoneNo" type="tel"  class="form-control p-3 ps-5" class="phoneNumber" placeholder="(201) 555-0123">
                <span class="text-danger" asp-validation-for="phoneNo"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input asp-for="email" type="text"  class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Your Email</label>
                <span class="text-danger" asp-validation-for="email"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="businessName" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Business/Property Name</label>
                <span class="text-danger" asp-validation-for="businessName"></span>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="number" asp-for="caseNo" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Case Number (optional)</label>
                <span class="text-danger" asp-validation-for="caseNo"></span>
            </div>
        </div>

        <h4>Patient Information</h4>
        <div class="form-floating col-12 ">
            <textarea asp-for="symptoms" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                      style="height: 100px"></textarea>
            <label for="floatingTextarea2" class="first">Enter Brief Details of Symptoms(Optional)</label>
            <span class="text-danger" asp-validation-for="symptoms"></span>
        </div>
        <div class="row mt-2">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input asp-for="patientFirstName" type="text"  class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">First Name</label>
                <span class="text-danger" asp-validation-for="patientFirstName"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input asp-for="patientLastName" type="text"  class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Last Name</label>
                <span class="text-danger" asp-validation-for="patientLastName"></span>
            </div>
        </div>

        <h4>Patient Contact Information</h4>
        <div class="row mt-3">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="email" asp-for="patientEmail" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Email</label>
                <span class="text-danger" asp-validation-for="patientEmail"></span>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="tel" asp-for="patientPhoneNo" class="form-control p-3 ps-5" class="phoneNumber" placeholder="(201) 555-0123">
                <span class="text-danger" asp-validation-for="patientPhoneNo"></span>
            </div>
        </div>

        <h4>Patient Location</h4>
        <div class="row mt-2">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="street" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Street</label>
                <span class="text-danger" asp-validation-for="street"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="city" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">City</label>
                <span class="text-danger" asp-validation-for="city"></span>
            </div>
        </div>
        <div class="row mt-2">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="state" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">State</label>
                                <span class="text-danger" asp-validation-for="state"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input type="number" asp-for="zipCode" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Zip Code</label>
                                <span class="text-danger" asp-validation-for="zipCode"></span>

            </div>
        </div>
        <div class="row mt-3">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input  type="text" asp-for="roomNo" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Room # / Suite (Optional)</label>
                                <span class="text-danger" asp-validation-for="roomNo"></span>

            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mx-3">
            <button class="btn btn-primary" type="submit">Submit</button>
            <button type="reset" class="btn btn-primary">Cancel</button>
        </div>

    </form>
</div>


@await Html.PartialAsync("footer")

<script>
    const phoneInputField = document.querySelectorAll("input[type='tel']");
    for (var i = 0; i < phoneInputField.length; i++) {
        const phoneInput = window.intlTelInput(phoneInputField[i], {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    }
</script>