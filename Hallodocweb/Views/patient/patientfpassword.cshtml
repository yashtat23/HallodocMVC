@{
    ViewData["Title"] = "patientfpassword";
}

<link rel="stylesheet" href="~/css/patientreg.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<div class="conatiner d-flex flex-column justify-content-center align-items-center">

    <div style="height:100vh" class="d-flex align-content-center justify-content-between flex-column">
        <div class="d-flex justify-content-around">
            <div>
                <img class="hallodoc-img" src="~/img/hallodoc.png" alt="aaavvv">
            </div>

            <div>
                <img onclick="myFunction()" class="light" class="light" src="../img/dark.png" alt="">
            </div>
        </div>

        <div class="mt-5 d-flex flex-column">
            <a asp-controller="Patient" asp-action="patientreg" class="d-flex text-decoration-none align-items-center border border-0">
                <div class="d-flex">
                    <img class="back" src="../img/back.png" alt="">
                </div>
                <span style="color: #00b8e6;" class="back-txt">Back</span>
            </a>



            <h2 class="text-center mt-2">
                Reset Password
            </h2>

            <div class="input-div form-floating mt-2">
                <input type="text" class="form-control shadow-none " placeholder="Username">
                <label class="FloatingInput" for="Name"> Username</label>
                <i class="i2 bi bi-person-circle icon"></i>

            </div>



            <div class="mt-3">
                <div class="login">
                    <a href="">
                        <button class="btn w-100 border-0 fw-medium"
                                style="background-color: #00b8e6; color: white;" type="button">
                            Reset Your Password
                        </button>
                    </a>
                    <div class="backToLogin">
                        <a asp-controller="patient" asp-action="patientreg" id="backto">&#60; Back To Login</a>
                    </div>
                </div>


            </div>

        </div>

        <div class="d-flex footer mt-5 ms-4 fw-medium">Terms of Conditions &nbsp;|&nbsp; Privacy Policy</div>
    </div>
</div>
