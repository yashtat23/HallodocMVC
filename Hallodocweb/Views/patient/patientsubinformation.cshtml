<div class="container">
    <div class="navbar navbar-light justify-content-between">
        <h3 class="dark-mode1">Submit Information</h3>
        <a asp-controller="patient" asp-action="patientdashboard">
            <button class="back btn btn-outline-info m-2">
                <span class="h6 p-0 m-0 text-center" style="color: #10bce9;">&#60; Back</span>
            </button>
        </a>
    </div>
</div>

<div class="container bg-light dark-mode1">
    <form method="post">
        <h3 class="dark-mode1">Patient Information</h3>
        <div class="form-floating col-12 ">
            <textarea asp-for="symptoms" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                      style="height: 100px"></textarea>
            <label for="floatingTextarea2" class="first">Enter Brief Details of Symptoms(Optional)</label>
            <span class="text-danger" asp-validation-for="symptoms"></span>
        </div>  
        <div class="row mt-3">
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input asp-for="firstname" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Your First Name</label>
                <span class="text-danger" asp-validation-for="firstname"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input asp-for="lastname" type="text"  class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Your Last Name</label>
                <span class="text-danger" asp-validation-for="lastname"></span>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12 mt-2">
                <input asp-for="Dateofbirth" type="date" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Date of Birth</label>
                <span class="text-danger" asp-validation-for="Dateofbirth"></span>
            </div>
        </div>

        <h4>Patient Contact Information</h4>
        <div class="row mt-2">
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input asp-for="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Email</label>
                <span class="text-danger" asp-validation-for="email"></span>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input asp-for="phonenumber" type="tel" class="form-control p-3 ps-5" class="phoneNumber" placeholder="(201) 555-0123">
                <span class="text-danger" asp-validation-for="phonenumber"></span>
            </div>
        </div>

        <h4>Patient Location</h4>
        <div class="row mt-2">
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input asp-for="street" type="text" class="form-control" id="submitinfostreet" placeholder="name@example.com">
                <label for="floatingInput" class="email">Street</label>
                <span class="text-danger" asp-validation-for="street"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input asp-for="city" type="text" class="form-control" id="submitinfocity" placeholder="Password">
                <label for="floatingPassword" class="email">City</label>
                <span class="text-danger" asp-validation-for="city"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input asp-for="state" type="text" class="form-control" id="submitinfostate" placeholder="name@example.com">
               <label for="floatingInput" class="email">State</label>
                <span class="text-danger" asp-validation-for="state"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input asp-for="zipcode" type="text" class="form-control" id="submitinfozipcode" placeholder="Password">
                <label for="floatingPassword" class="email">Zip Code</label>
                <span class="text-danger" asp-validation-for="zipcode"></span>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12 mt-2">
                <input asp-for="roomno" type="text" class="form-control" id="submitinforoom" placeholder="name@example.com">
                <label for="floatingInput" class="email">Room # / Suite (optional)</label>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12 mt-2">
                <button type="button" onclick="submitinfomap()" class="btn btn-outline-primary dark-mode1" style="height:3.3rem ; width:6rem"> <i class="bi bi-geo-alt"></i> Map</button>
            </div>
        </div>

        <h4>Relation</h4>
        <div class="row mt-2">
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Relation with Patient(Optional)</label>
            </div>
            
        </div>

        <h4>(Optional)Upload Photo Or Document</h4>
        <div class="form mb-3 col-lg-12 col-md-12 col-sm-12 d-flex">
            <div class="input-group mb-3">
                <input asp-for="File" type="file" class="form-control form-control-lg id="fromFilelg" multiple>
                <label class="input-group-text bg-primary text-white" for="inputGroupFile02">
                    <i class="bi bi-cloud-arrow-up m-1"></i>&nbsp;Upload
                </label>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2  mb-3">
            <button type="submit" class="btn btn-primary mb-3">submit</button>
            <button type="reset" class="btn btn-outline-primary mb-3 dark-mode1">cancel</button>
        </div>
    </form>
</div>
@await Html.PartialAsync("footer")
<script src="~/js/dark-mode.js"></script>
<script>
    const phoneInputField = document.querySelectorAll("input[type='tel']");
    for (var i = 0; i < phoneInputField.length; i++) {
        const phoneInput = window.intlTelInput(phoneInputField[i], {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    }

    function submitinfomap() {
        var street = $("#submitinfostreet").val();
        var city = $("#submitinfocity").val();
        var state = $("#submitinfostate").val();
        var zipcode = $("#submitinfozipcode").val();

        window.location.href = "https://www.google.com/maps/search/?api=1&query=" + street + city + state + zipcode;
    }

</script>
