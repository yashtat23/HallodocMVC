@{
    ViewData["Title"] = "patientresetpass";
}

<link rel="stylesheet" href="~/css/patientreg.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<div class="conatiner d-flex flex-column justify-content-center align-items-center">

    <div style="height:100vh;width:320px;" class="d-flex align-content-center justify-content-between flex-column">
        <div class="d-flex justify-content-around">
            <div>
                <img class="hallodoc-img" src="~/img/hallodoc.png" alt="aaavvv">
            </div>

            <div>
                <img onclick="myFunction()" class="light" class="light" src="../img/dark.png" alt="">
            </div>
        </div>

        <div class="mt-5 d-flex flex-column ">
            <a asp-controller="patient" asp-action="patientreg" class="d-flex text-decoration-none align-items-center border border-0">
                <div class="d-flex">
                    <img class="back" src="../img/back.png" alt="">
                </div>
                <span style="color: #00b8e6;" class="back-txt">Back</span>
            </a>

            <h3 class="text-center mt-2">
                Create Account
            </h3>
            <form method="post">
                <div class="input-div form-floating mt-3">
                    <input type="password" class="form-control shadow-none" id="myInput" placeholder="Password">
                    <label class="FloatingInput" for="Name">Password</label>
                    <i class="i1 bi bi-eye icon" onclick="myPassword()" id="icon_1"></i>
                </div>

                <div class="input-div form-floating mt-3">
                    <input type="password" class="form-control shadow-none" id="myInput1" placeholder="Password">
                    <label class="FloatingInput" for="Name">Confirm Password</label>
                    <i class="i1 bi bi-eye icon" onclick="confirmpassword()" id="icon_1"></i>
                </div>

                <div class="mt-3">
                    <div class="login">
                        <a>
                            <button class="btn w-100 border-0 fw-medium"
                                    style="background-color: #00b8e6; color: white;" type="submit">
                                Create
                            </button>
                        </a>
                    </div>
                </div>

            </form>

        </div>

        <div class="d-flex footer mt-5 ms-4 fw-medium">Terms of Conditions &nbsp;|&nbsp; Privacy Policy</div>
    </div>
</div>


<script src="~/js/site.js"></script>
<script>
    function myPassword() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
    function confirmpassword() {
        var y = document.getElementById("myInput1");
        if (y.type === "password") {
            y.type = "text";
        } else {
            y.type = "password";
        }
    }
</script>

