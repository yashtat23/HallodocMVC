@using DataAccess.CustomModels;
@model FamilyReqModel;

@{
    ViewData["Title"] = "familyfriendreq";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/HalloDoc.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<link rel="stylesheet" href="~/css/patientreq.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<style>
    .iti {
        width: 100%;
    }
</style>
@await Html.PartialAsync("modal")

@await Html.PartialAsync("navbar")
<div class="container-fluid">

    <div class="navbar navbar-light justify-content-end">
        <a asp-controller="patient" asp-action="patientsubreq">
            <button class="back btn btn-outline-info m-2" onclick="location.href='patientsubreq.html'">
                <span class="h6 p-0 m-0 text-center" style="color: #10bce9;">&#60; Back</span>
            </button>
        </a>
    </div>
</div>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <h4>Family/Friend Information</h4>
        <div class="row mt-3">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="firstName"  class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Your First Name</label>
                  <span class="text-danger" asp-validation-for="firstName"></span> 
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="lastName" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Your Last Name</label>
                <span class="text-danger" asp-validation-for="lastName"></span>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="tel" asp-for="phoneNo" class="form-control p-3 ps-5" class="phoneNumber" placeholder="(201) 555-0123">
                <span class="text-danger" asp-validation-for="phoneNo"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input type="email" asp-for="email" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Your Email</label>
                <span class="text-danger" asp-validation-for="email"></span>
            </div>
        </div>

        <h4>Patient Infromation</h4>

        <div class="form-floating col-12 ">
            <textarea class="form-control" asp-for="symptoms"  placeholder="Leave a comment here" id="floatingTextarea2"
                      style="height: 100px"></textarea>
            <label for="floatingTextarea2" class="first">Enter Brief Details of Symptoms(Optional)</label>
        </div>
        <div class="row mt-3">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="patientFirstName" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Your First Name</label>
                <span class="text-danger" asp-validation-for="patientFirstName"></span>

            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="patientLastName" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Your Last Name</label>
                <span class="text-danger" asp-validation-for="patientLastName"></span>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12 mt-2">
                <input type="date" asp-for="patientDob" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Date of Birth</label>
                <span class="text-danger" asp-validation-for="patientDob"></span>
            </div>
        </div>

        <h4>Patient Contact Information</h4>
        <div class="row mt-3">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="email" asp-for="patientEmail" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Email</label>
                <span class="text-danger" asp-validation-for="email"></span>             
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="tel" asp-for="patientPhoneNo" class="form-control p-3 ps-5" class="phoneNumber" placeholder="(201) 555-0123">
                <span class="text-danger" asp-validation-for="patientPhoneNo"></span>
            </div>
        </div>


        <h4>Patient Location</h4>
        <div class="row mt-2">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="street" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Street</label>
                  
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="city" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">City</label>
                  
            </div>
        </div>
        <div class="row mt-2">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="state" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">State</label>
                <span class="text-danger" asp-validation-for="state"></span>
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="zipCode" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Zip Code</label>
                 
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12 mt-2">
                <input type="text" asp-for="roomNo" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Room # / Suite (optional)</label>
                 
            </div>

        </div>

        <h4>(Optional)Upload Photo Or Document</h4>
        <div class="form mb-3 col-lg-12 col-md-12 col-sm-12 d-flex">

            <div class="input-group mb-3">
                <input asp-for="File" type="file" class="form-control form-control-lg id="fromFilelg" multiple>
                <label class="input-group-text bg-primary text-white" for="inputGroupFile02">
                    <i class="bi bi-cloud-arrow-up m-1"></i>&nbsp;Upload
                </label>
            </div>

        </div>

        <div class="d-flex justify-content-end gap-2  mb-3">
            <button type="submit" class="btn btn-primary">submit</button>
            <button type="reset" class="btn btn-outline-primary">cancel</button>
        </div>
    </form>

</div>
@await Html.PartialAsync("footer")

<script>

    const phoneInputField = document.querySelectorAll("input[type='tel']");
    for (var i = 0; i < phoneInputField.length; i++) {
        const phoneInput = window.intlTelInput(phoneInputField[i], {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    }
</script>



