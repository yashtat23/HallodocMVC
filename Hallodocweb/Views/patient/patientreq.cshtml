<style>
    .iti {
        width: 100%;
    }
</style>

@await Html.PartialAsync("navbar")
<div class="container-fluid">

    <div class="navbar navbar-light justify-content-end">
        <a asp-controller="patient" asp-action="patientsubreq">
            <button class="back btn btn-outline-info m-2" onclick="location.href='patientsubreq.html'">
                <span class="h6 p-0 m-0 text-center" style="color: #10bce9;">&#60; Back</span>
            </button>
        </a>
    </div>
</div>

<div class="container overflow-hidden bg-white dark-mode1" >
    <form method="post" enctype="multipart/form-data">
        <h4 class="dark-mode1 my-2">Patient Information</h4>
        <div class="row mt-3">
            <div class="form-floating mb-3">
                <textarea class="form-control" asp-for="symptoms" placeholder="Leave a comment here" id="floatingTextarea2"
                          style="height: 100px"></textarea>
                <label for="floatingTextarea2" class="first mx-2">Enter Brief Details of Symptoms(Optional)</label>
                <span class="text-danger" asp-validation-for="symptoms"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="firstname" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">First Name</label>
                <span class="text-danger" asp-validation-for="firstname"></span> 
            </div>
            <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                <input asp-for="lastname" type="text" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" class="email">Last Name</label>
                 <span class="text-danger" asp-validation-for="lastname"></span>
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12 mt-2">
                <input type="date" asp-for="Dateofbirth" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">Date of Birth</label>
                 <span class="text-danger" asp-validation-for="Dateofbirth"></span>
            </div>
        </div>

        <h4>Patient Contact Information</h4>
        <div class="row mt-2">

            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="email" asp-for="email" class="form-control" id="email" placeholder="name@example.com">
                <label for="floatingInput" class="email">Email</label>
                <span class="text-danger" asp-validation-for="email"></span> 
            </div>
            <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="tel" asp-for="phonenumber" class="form-control p-3 ps-5" class="phoneNumber" placeholder="(201) 555-0123">
                <span class="text-danger" asp-validation-for="phonenumber"></span> 
            </div>
        </div>

        <div class="row mt-2">
        <div id="passwordSection" class="col-6 " style="display:none">
            <div class="input-div form-floating mb-3">
                    <input asp-for="password" type="password" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="hidenpass">Password</label>
                    <span class="text-danger" asp-validation-for="password"></span>
                </div>
        </div>
        <div id="confirmPasswordSec" class="col-6" style="display:none">
            <div class="input-div form-floating mb-3">
                    <input asp-for="confirmPassword" type="password" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="hidenpass">Confirm Password</label>
                    <span class="text-danger" asp-validation-for="confirmPassword"></span>
                </div>
        </div>
        </div>

        <h4>Patient Location</h4>
            <div class="row mt-2">

                <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                    <input type="text" asp-for="street" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput" class="email">Street</label>
                    <span class="text-danger" asp-validation-for="street"></span>
                </div>
                <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                    <input type="text" asp-for="city" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword" class="email">City</label>
                    <span class="text-danger" asp-validation-for="city"></span>
                </div>
            
                <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12">
                <input type="text" asp-for="state" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" class="email">State</label>
                <span class="text-danger" asp-validation-for="state"></span> 
                </div>
                <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                    <input asp-for="zipcode" type="text" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword" class="email">Zip Code</label>
                    <span class="text-danger" asp-validation-for="zipcode"></span> 
                </div>
                <div class="form-floating mb-3 col-lg-6 col-md-12 col-sm-12 mt-2">
                    <input type="text" asp-for="roomno" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput" class="email">Room # / Suite (optional)</label>
                    <span class="text-danger" asp-validation-for="roomno"></span>
                </div>
        </div>
            <h4>(Optional)Upload Photo Or Document</h4>
            <div class="form mb-3 col-lg-12 col-md-12 col-sm-12 d-flex">

            <div class="input-group mb-3">
                <input asp-for="File" type="file" class="form-control form-control-lg id="fromFilelg" multiple>
                <label class="input-group-text bg-primary text-white" for="inputGroupFile02">
                    <i class="bi bi-cloud-arrow-up m-1"></i>&nbsp;Upload
                </label>
            </div>

            </div>

            <div class="d-flex justify-content-end gap-2 mb-3">
                <button type="submit" class="btn btn-primary" >submit</button>
                <button type="reset" class="btn btn-outline-primary dark-mode1" >cancel</button>
            </div>
    </form>

</div>

@await Html.PartialAsync("footer")

<script>

    const phoneInputField = document.querySelectorAll("input[type='tel']");
    for (var i = 0; i < phoneInputField.length; i++) {
        const phoneInput = window.intlTelInput(phoneInputField[i], {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    }
        $('#email').focusout(function () {
            var email = $(this).val();
            $.ajax({
                url: '/Patient/CheckEmailExists',
                type: 'GET',
                contentType: 'application/json',
                data: { email: email },
                success: function (response) {
                    if (response.emailExists) {
                        $('#passwordSection').hide();
                        $('#confirmPasswordSec').hide();
                    } else {
                        $('#passwordSection').show();
                        $('#confirmPasswordSec').show();
                    }
                }
            });
        });
</script>



